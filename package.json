{
    "name": "stravital",
    "author": {
        "email": "or2008@gmail.com",
        "name": "Or Bachar"
    },
    "version": "0.0.1",
    "description": "A simple React starter template for your next react application.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/or2008/frontend-starter-kit.git"
    },
    "scripts": {
        "dev": "vite --host",
        "build": "tsc && vite build",
        "serve": "vite preview",
        "lint": "eslint --config ./.eslintrc.cjs ./src/**/*.{tsx,ts}",
        "lint:fix": "eslint --config ./.eslintrc.cjs ./src/**/*.{tsx,ts} --fix",
        "lint:package-json": "npmPkgJsonLint .",
        "postinstall": "husky install",
        "type-check": "tsc --project tsconfig.json --pretty --noEmit",

    },
    "dependencies": {
        "@radix-ui/react-popover": "1.0.2",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-icons": "4.7.1",
        "react-router-dom": "6.6.1",
        "tailwind-merge": "1.8.1",
        "zustand": "4.2.0"
    },
    "devDependencies": {
        "@types/node": "18.11.18",
        "@types/react": "18.0.26",
        "@types/react-dom": "18.0.10",
        "@typescript-eslint/eslint-plugin": "5.48.0",
        "@typescript-eslint/parser": "5.48.0",
        "@vitejs/plugin-react": "3.0.1",
        "autoprefixer": "10.4.13",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "8.31.0",
        "eslint-config-hardcore": "^26.0.1",
        "husky": "8.0.3",
        "lint-staged": "13.1.0",
        "npm-package-json-lint": "6.4.0",
        "postcss": "8.4.20",
        "tailwindcss": "3.2.4",
        "typescript": "4.9.4",
        "vite": "4.0.4"
    },
    "resolutions": {
        "@types/node": "17.0.23",
        "@types/react": "17.0.43",
        "@types/react-dom": "17.0.14"
    },
    "keywords": [
        "starter template",
        "starter template vite react",
        "react vite tailwindcss",
        "react",
        "vite",
        "tailwindcss"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "**/*.{css,scss,md,html,json}": [
            "echo lalalala"
        ],
        "./src/*.{ts,tsx}": [
            "npm run lint",
            "bash -c 'npm run check-types'"
        ],
        "./package.json": [
            "npm run lint:package-json"
        ]
    }
}